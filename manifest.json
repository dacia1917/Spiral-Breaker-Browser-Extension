{
    "manifest_version": 2,
    "version": "1.0",
    "name": "Spiral Breaker",
    "icons": {
        "48": "Sos-brigade.svg"
    },

    "permissions": [
        "tabs",
        "storage",
        "activeTab"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "Sos-brigade.svg",
        "default_title": "Spiral Breaker",
        "default_popup": "popup/popup.html"
    },

    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "js": ["main.js"]
        }
    ]
}